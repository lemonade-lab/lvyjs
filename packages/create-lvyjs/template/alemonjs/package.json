{
  "name": "alemon-template",
  "version": "1.0.0",
  "description": "template",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "dev": "npx lvy dev",
    "build": "npx lvy build",
    "bundle": "npx lerna run build",
    "start": "npx pm2 startOrRestart pm2.config.cjs",
    "stop": "npx pm2 stop pm2.config.cjs",
    "delete": "npx pm2 delete pm2.config.cjs",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code"
  },
  "exports": {
    ".": "./lib/index.js",
    "./package": "./package.json"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "bullmq": "^4.12.7",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "jsxp": "1.0.8",
    "mysql2": "^3.6.2",
    "sequelize": "^6.33.0"
  },
  "devDependencies": {
    "@alemonjs/discord": "^0.2.1",
    "@alemonjs/gui": "^0.3.0",
    "@alemonjs/kook": "^0.2.1",
    "@alemonjs/onebot": "^0.2.1",
    "@alemonjs/qq": "^0.2.1",
    "@alemonjs/qq-bot": "^0.0.6",
    "@alemonjs/qq-group-bot": "^0.2.2",
    "@alemonjs/qq-guild-bot": "^0.2.2",
    "@alemonjs/telegram": "^0.2.1",
    "@alemonjs/wechat": "^0.2.1",
    "@types/node": "^18",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.5",
    "alemonjs": "2.0.0-rc.82",
    "tailwindcss": "^3.4.17",
    "cssnano": "^7.0.6",
    "lvyjs": "^0.2.14",
    "pm2": "^5.3.0",
    "lerna": "^8.1.9",
    "prettier": "^3.0.3"
  }
}
